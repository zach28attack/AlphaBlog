<%= render 'shared/errors', obj: @article %>
<%= form_with(model: @article, local: true)  do |f| %>
  <%= f.label :title%>
  <%= f.text_field :title,  placeholder: "Title of article" %>
  <%= f.label :body%>
  <%= f.text_area :body,  placeholder: "Description of article"  %>
  <%= f.label :category%>
  <%= f.submit "Save article", class: "btn btn-outline-light btn-lg col-2" %>
<%end%>
<%= link_to '[Cancel and return to articles listing]', articles_path, class: "text-dark"%>
