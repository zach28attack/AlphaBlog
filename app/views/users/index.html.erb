<h1> All bloggers</h1>
<%= page_entries_info @articles %>
<%= will_paginate @articlees, :container => false %>
<% @users.each do |user|%>
  <%= link_to user.username, user_path(user) %>
  <p><%= pluralize(user.articles.count, "article")%></p>
  <%= link_to 'View profile', user_path(user)%>
  <% if logged_in? and user == current_user%>
    <%= link_to 'Edit profile', edit_user_path(user)%>
  <% end %>
  <%if logged_in? and current_user.admin? %>
    <%= button_to "Delete account", user_path(user), method: :delete, form: { data:{ turbo_confirm: 'Are you sure you want to delete this account and all associated articles?'}}%>
  <% end %>
  <small> Joined <%= time_ago_in_words(user.created_at) %> ago </small>
<%end%>
<%= page_entries_info @articles %>
<%= will_paginate @articlees, :container => false %>
