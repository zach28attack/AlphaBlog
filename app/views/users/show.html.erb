<h1 class = "text-center mt-4"><%= @user.username%>'s profile<h1>
<%= gravatar_for @user%>
<% if logged_in? and (@user == current_user || current_user.admin?)%>
    <div class= "text-center mt-4">
        <%= link_to "Edit account", edit_user_path(@user), class: "btn btn-outline-info" %>
        <%= button_to "Delete account", user_path(@user), method: :delete, form: { data:{ turbo_confirm: 'Are you sure you want to delete this account and all associated articles?'}}, class: "btn btn-outline-danger" %>
    </div>
<%end%>
<h3 class = "text-center mt-4"><%= @user.username%>'s articles<h3>
<%= render 'articles/articles'%>
<div class="apple_pagination fs-5 mb-4">
    <div class="page_info">
      <%= page_entries_info @articles %>
    </div>
    <%= will_paginate @articles, :container => false %>
</div>








