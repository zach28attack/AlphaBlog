<h1 class = "text-center mt-4"><%= @user.username%>'s profile<h1>

<%= gravatar_for @user%>
<% if logged_in? and @user == current_user%>
<div class= "text-center mt-4">
<%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>

<%= button_to "Delete your profile", user_path(current_user), method: :delete, form: { data:{ turbo_confirm: 'Are you sure?'}}, class: "btn btn-outline-danger" %>
</div>
<%end%>

<h3 class = "text-center mt-4"><%= @user.username%>'s articles<h3>



<%= render 'articles/articles'%>





